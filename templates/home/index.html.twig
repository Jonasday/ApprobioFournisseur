{% extends 'base.html.twig' %}


{% block body %}
    <div class="container mt-4">
        <h1 class="text-dark" style="font-size: 4rem; font-weight: bold; text-align: center"> Approbio Fournisseur</h1>
    </div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">

            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="..." alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <div class="table_title">
        <h2 style="text-align: center; margin-top: 150px">Liste des produits</h2>
    </div>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col" style="color: dodgerblue">Produit</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Coût HT</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Prix de vente HT</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Prix de vente TTC</th>
            <th scope="col" style="text-align: center; color: dodgerblue">TVA (en %)</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Taux de marge (en %)</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Bio</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Commerce équitable</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Solidaire</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Fournisseur</th>
            <th scope="col" style="text-align: center; color: dodgerblue">Catégorie</th>
        </tr>
        </thead>
        <tbody>
        {% for product in product %}
            <tr>
                <th scope="row"> {{ product.name }}</th>
                <td style="text-align: center"> {{ product.cost }}</td>
                <td style="text-align: center"> {{ product.sellingPrice }}</td>
                <td style="text-align: center"> {{ product.sellingPriceTtc }}</td>
                <td style="text-align: center"> {{ product.tva }}</td>
                <td style="text-align: center"> {{ product.margin }}</td>
                <td style="text-align: center"> {{ product.bio ? 'Oui' : 'Non' }}</td>
                <td style="text-align: center"> {{ product.commerceEquitable ? 'Oui' : 'Non' }}</td>
                <td style="text-align: center"> {{ product.solidaire ? 'Oui' : 'Non' }}</td>
                <td style="text-align: center"> {{ product.fournisseur.name }}</td>
                <td style="text-align: center"> {{ product.category.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

{% endblock %}
