        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link rel="stylesheet" href="{{asset('assets/CSS/style.css')}}">
        {% endblock %}
    </head>
    <header class="header" id=header">
    {% block header%}
        <nav class="nav bg-light justify-content-center">

                            <a href="{{ path ('home') }}" class="nav-link text-dark">
                                <i class="uil uil-estate"></i> Accueil
                            </a>

                            <a href="{{ path ('fournisseur') }}" class="nav-link text-dark">
                                <i class="uil uil-user-square"></i> Fournisseurs
                            </a>

                            <a href="{{ path ('product') }}" class="nav-link text-dark">
                                <i class="uil uil-briefcase-alt"></i> Produits
                            </a>


                            <a href="{{ path ('category') }}" class="nav-link text-dark">
                                <i class="uil uil-bright"></i> Catégories
                            </a>

                </div>
            </nav>
        </header>
    {% endblock %}

    <body>
    {% block body %}
    {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{asset('JS/main.js')}}"
        {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    </body>
</html>
