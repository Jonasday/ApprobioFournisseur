{% extends 'base.html.twig' %}

{% block title %} {{ product.name }} {% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <div class="text-dark" style="font-size: 4rem; font-weight: bold;"> {{ product.name }}</div>
                <h2>Fournisseur : {{ product.fournisseur.name }}</h2>
                <p>
                    {{ product.cost }}
                    {{ product.sellingPrice }}
                    {{ product.sellingPriceTtc }}
                    {{ product.tva }}
                    {{ product.margin }}
                    {{ product.category.name }}
                    Bio : {{ product.bio }}
                    Commerce Ã©quitable : {{ product.commerceEquitable }}
                    Solidaire : {{ product.solidaire }}
                </p>
                <a href="{{ path ('modify_product', {'id': product.id}) }}" class="btn btn-dark">Modifier</a>
                <a href="{{ path ('delete_product', {'id': product.id}) }}" class="btn btn-dark">Supprimer le produit</a>
                <a href="{{ path ('product') }}" class="btn btn-dark">Retour</a>
            </div>
        </div>
    </div>

{% endblock %}