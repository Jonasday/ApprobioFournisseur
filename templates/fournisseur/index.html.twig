{% extends 'base.html.twig' %}

{% block body %}

        <div class="container">
            <h1>Les fournisseurs breton</h1>
            <div class="row flex">
                {% for fournisseur in fournisseur %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5  class="card-title">
                                <a href="{{ path ('fournisseur_details', {'id': fournisseur.id}) }}">{{ fournisseur.name }}</a>
                            </h5>
                            <p class="card-text">{{ fournisseur.city }} {{  fournisseur.postalCode }}</p>
                            <div class="text-primary">{{ fournisseur.category }}</div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

{% endblock %}
